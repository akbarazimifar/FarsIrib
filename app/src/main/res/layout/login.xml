<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_header_background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">


                <ir.farsirib.CustomWidgets.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="برای ورود شماره موبایل و نام شهر خود را وارد کنید"
                    android:textSize="18dp"/>

                <ir.farsirib.CustomWidgets.MyEditText
                    android:id="@+id/mobile_text"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:hint="شماره موبایل"
                    android:inputType="number"
                    android:maxLength="11"
                    android:singleLine="true" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/city_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="نام شهر"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <ir.farsirib.CustomWidgets.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="right"
                    android:text="کاربر گرامی علت دریافت شماره همراه شما، استفاده از آن در بخش شهروند خبرنگار و تلویزیون اجتماعی شبکه فارس می باشد."
                    android:textSize="12dp"/>

                <ir.farsirib.CustomWidgets.MyButton
                    android:id="@+id/submit_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="50dp"
                    android:background="@drawable/mybtnshape"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="ورود"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>