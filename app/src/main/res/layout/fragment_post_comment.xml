<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ir.farsirib.Fragment.PostCommentFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <ir.farsirib.CustomWidgets.MyTextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="#f27124"
                    android:gravity="center"
                    android:text="ارسال نظرات کاربران"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="#d9d8da">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="نام ارسال کننده (اختیاری)"
                        android:singleLine="true"
                        android:textColorHighlight="#03ad9f"
                        android:textColorHint="#03ad9f" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="#d9d8da">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/email_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="رایانامه (اختیاری)"
                        android:singleLine="true"
                        android:textColorHint="#03ad9f" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tel_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="#d9d8da">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/tel_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="تلفن همراه (اختیاری)"
                        android:singleLine="true"
                        android:textColorHint="#03ad9f" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/web_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="#d9d8da">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/web_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:hint="آدرس وب سایت (اختیاری)"
                        android:singleLine="true"
                        android:textColorHint="#03ad9f" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/comment_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:background="#d9d8da">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/comment_text"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:gravity="right"
                        android:hint="متن"
                        android:inputType="textMultiLine"
                        android:singleLine="true"
                        android:textColorHint="#03ad9f" />

                </android.support.design.widget.TextInputLayout>

                <ir.farsirib.CustomWidgets.MyButton
                    android:id="@+id/submit_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:background="#f27124"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="ارسال"
                    android:textColor="#ffffff"
                    android:textSize="26dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
