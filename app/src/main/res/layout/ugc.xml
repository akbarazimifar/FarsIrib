<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient_header_background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true"
        tools:ignore="RtlCompat">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/login_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">


                <ir.farsirib.CustomWidgets.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:text="فرم ارسال اطلاعات،عکس و فیلم ساخت کاربر"
                    android:textSize="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/name_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="نام و نام خانوادگی"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/age_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/age_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:hint="سن"
                        android:inputType="number"
                        android:maxLength="2"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/mobile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/mobile_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:enabled="false"
                        android:hint="شماره موبایل"
                        android:inputType="number"
                        android:maxLength="11"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/city_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/city_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="نام شهر"
                        android:enabled="false"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <ir.farsirib.CustomWidgets.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/category"
                    android:textSize="16dp" />

                <Spinner
                    android:id="@+id/spinner1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/description_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <ir.farsirib.CustomWidgets.MyEditText
                        android:id="@+id/description_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint=" توضیحات(ورود اختیاری)"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle"
                        android:src="@mipmap/ic_folder" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle"
                        android:src="@mipmap/ic_camera" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle"
                        android:src="@mipmap/ic_video" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_circle"
                        android:src="@mipmap/ic_video_library" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ir.farsirib.CustomWidgets.MyTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="انتخاب عکس از گالری"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                    <ir.farsirib.CustomWidgets.MyTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="گرفتن عکس با دوربین"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        tools:ignore="NotSibling" />

                    <ir.farsirib.CustomWidgets.MyTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:text="گرفتن فیلم با دوربین"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        tools:ignore="NotSibling" />

                    <ir.farsirib.CustomWidgets.MyTextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="8dp"
                        android:text="انتخاب فیلم از گالری"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        tools:ignore="NotSibling" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/display_image_view"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:visibility="gone" />

                        <VideoView
                            android:id="@+id/video_display"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:backgroundTint="#000000"
                            android:layout_centerInParent="true"
                            android:visibility="gone"/>

                        <ProgressBar
                            android:id="@+id/upload_progress"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:visibility="gone" />

                        <ir.farsirib.CustomWidgets.MyTextView
                            android:id="@+id/upload_txt"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/upload_progress"
                            android:gravity="center"
                            android:text="در حال آپلود"
                            android:textColor="#000000"
                            android:visibility="gone" />


                </LinearLayout>

                <ir.farsirib.CustomWidgets.MyButton
                    android:id="@+id/submit_bt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:background="@drawable/mybtnshape"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="ارسال"
                    android:textColor="#000000"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>